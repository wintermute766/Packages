<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/package_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/padding"
        android:layout_marginTop="@dimen/package_margin"
        android:layout_marginBottom="@dimen/package_margin"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/package_icon"
        android:textAppearance="@style/Title"
        tools:text="Package name"/>

    <TextView
        android:id="@+id/package_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:layout_toRightOf="@id/package_icon"
        android:layout_below="@id/package_name"
        tools:text="com.example.app"/>

</RelativeLayout>